{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "types": ["node", "express"],
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@vocab/*": ["../../packages/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
} 